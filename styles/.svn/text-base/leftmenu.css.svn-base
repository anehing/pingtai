/* left */

html{ overflow-x:hidden; }
html,body{height:100%; margin:0px;}
*{margin:0px; 	padding:0px;  font-size:12px;}

.menu{

	background: url(../images/x_1.png);
	cursor: pointer;
}

.left_back2  { 
	
	background: url(../images/ML_1.png) no-repeat #bcd2e0; 
	width:181px; height:100%; 
	border-left:#FFF solid 1px; 
	
}
.left_back3	{
	
	width:171px;
	margin:0px 0px 0px 0px;	
	
}

.normal_txt {
	color: #345;
	height: 29px;
	padding:0px 0px 0px 35px;
	font-size: 12px;
	cursor:pointer;
}

.normal_txt:hover { 
	
	background: url(../images/x_3ax.png) no-repeat; 
	color: #53b402; 

}


.normal_txt1 {
	height: 32px;
	width: 171px;
	font-size: 13px;
	background: url(../images/ML_a.png) no-repeat;
	margin:0px auto 4px auto;
	overflow:hidden;
	cursor:pointer;
	border:0px;
	line-height:32px;
	text-indent:46px;
}

.normal_txt1:hover{
	background: url(../images/ML_c.png) no-repeat;  
}



.normal_txt2 {
	color: #3E5368;
	padding:5px 0px 0px 15px;
	height: 24px;
	font-size: 12px;
	background: url(../images/x_3d.png) bottom;
	cursor:pointer;
	margin-top:5px; 
}
.normal_txt2:hover { 
	
	background: url(../images/x_3e.png) bottom;
	margin-top:5px; 
}

.hover_txt1 {
	height: 32px; 
	width: 171px; 
	font-size: 13px; 
	background: url(../images/ML_b.png) no-repeat; 
	margin:0px auto 4px auto;   
	overflow:hidden;
	cursor:pointer; 
	border:0px; 
	line-height:32px; 
	text-indent:46px;
	
}
.hover_txt2 {
	
	color:#000;
	height: 24px;
	font-size: 12px;
	background: url(../images/x_3f2.png) bottom;
	padding:5px 0px 0px 15px;
	cursor:pointer;

}
.hover_txt {
	
	color:#006bdc;
	height: 29px;
	font-size: 12px;
	line-height:29px;
	background:url(../images/x_3bx.png) no-repeat;
	cursor:pointer;
	padding-left:35px;
	margin:0px;
	width:100%;

}


.xt_r { 
	
	border:1px solid #80a0b6; 
	background:#f6f9fe; 
	margin-top:-5px; 
	margin-bottom:4px; 
	overflow:auto; 
	position:relative; 
	padding:5px;
	
}

.xt_r ul {
	
	margin-top:0px; 
	
}

.xt_r ul li {
	
	height: 30px; 
	font-size: 13px; 
	line-height:29px; 
	list-style-type: none; 
	background: url(../images/x_3.png);
	
}

